							<addClasspath>true</addClasspath>
							<mainClass>net.collaud.fablab.door.WebServiceServer</mainClass>
						</manifest>
					</archive>
				</configuration>
				<version>2.4</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
